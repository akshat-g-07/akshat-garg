{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "treklicious-be": {
      "cache": false,
      "env": [
        "PORT",
        "NODE_ENV",
        "REFRESH_TOKEN_SECRET",
        "ACCESS_TOKEN_SECRET",
        "ADMIN_CODE",
        "UI-ORIGIN",
        "DATABASE_URI"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
